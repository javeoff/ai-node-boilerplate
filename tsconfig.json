{
    "compilerOptions": {
      "rootDir": "./lib",
      "lib": ["ESNext", "DOM"],
      "module": "commonjs",
      "target": "ES2022",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "allowSyntheticDefaultImports": true,
      "noPropertyAccessFromIndexSignature": false
    },
    "include": [
      "./lib/**/*"
    ]
  }
  
  